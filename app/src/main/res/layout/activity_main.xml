<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ক্যালেন্ডার"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/viewSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/monthlyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মাসিক"
            android:checked="true" />

        <RadioButton
            android:id="@+id/yearlyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বার্ষিক" />
    </RadioGroup>

    <TextView
        android:id="@+id/Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="মে ২০২৪"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/viewSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <GridLayout
        android:id="@+id/calendarGrid"
        android:layout_width="428dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="7"
        android:orientation="horizontal"
        android:padding="8dp"
        android:rowCount="6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">
        <!-- Days of the week -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="রবি" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="সোম" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="মঙ্গল" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="বুধ" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="বৃহঃ" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="শুক্র" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="শনি" />

        <!-- May 2024 Dates -->
        <!-- The first day of May 2024 is on a Wednesday -->
        <!-- Empty TextViews for padding -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center" />

        <!-- First week of May -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="১" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="২" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="৩" />

        <!-- Second week of May -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="৪" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="৫" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="৬" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/pmsColor"
            android:gravity="center"
            android:text="৭" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="৮" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="৯" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="১০" />

        <!-- Third week of May -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="১১" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="১২" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/periodColor"
            android:gravity="center"
            android:text="১৩" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="১৪" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="১৫" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/ovulationColor"
            android:gravity="center"
            android:text="১৬" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/ovulationColor"
            android:gravity="center"
            android:text="১৭" />

        <!-- Fourth week of May -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/ovulationColor"
            android:gravity="center"
            android:text="১৮" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@color/ovulationColor"
            android:gravity="center"
            android:text="১৯" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২০" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২১" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২২" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৩" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৪" />

        <!-- Fifth week of May -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৫" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৬" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৭" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৮" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="২৯" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="৩০" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="৩১" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/notification1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FDA5D1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/calendarGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/notificationText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="আপনার পরবর্তী পিরিয়ড ৭ই জুন আশা করা হচ্ছে।"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/audioButton1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background=""
            android:src="@drawable/audioicon"
            android:onClick="playAudio1"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FDA5D1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/notification1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/notificationText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ডিম্বস্ফোটন ১৬ই মে থেকে ১৯ই মে এর মধ্যে আশা করা হচ্ছে।"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/audioButton2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background=""
            android:src="@drawable/audioicon"
            android:onClick="playAudio2"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Legend -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/chatbotButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/chatbot"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/hotlineButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="23dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/hotline"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/pharmacyButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/pharmacyicon"
            app:layout_constraintLeft_toLeftOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/chatbotbubble"
            android:layout_width="90dp"
            android:layout_height="59dp"
            android:layout_marginStart="28dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/chatbotbubble"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/hotlinebubble"
            android:layout_width="90dp"
            android:layout_height="69dp"
            android:layout_marginStart="28dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/callkorun"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/pharmacybubble"
            android:layout_width="90dp"
            android:layout_height="59dp"
            android:layout_marginStart="28dp"
            android:background=""
            android:scaleType="centerInside"
            android:src="@drawable/pharmacybubble"
            app:layout_constraintLeft_toLeftOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pmsColor"
            android:text="PMS"
            android:padding="4dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/periodColor"
            android:text="পিরিয়ড"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ovulationColor"
            android:text="অভুলেশন"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
